  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.13.1"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test":  "lerna run test",
    "watch:test": "cd packages/core && yarn watch:test",
    "clean:modules": "lerna clean -y; rm -rf ./node_modules",
